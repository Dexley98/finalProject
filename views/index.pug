doctype html
html
  head
    title Consumer View
    link(rel="stylesheet", type="text/css", href="./css/layout.css")

  body
    h1 Product Directory

    label Browse by Product
    ul
      each product in products
          li
            a(href="/product/" + product.id) #{product.productName}

    label Browse by Category
    ul
      each cat in cats
        li
          a(href="/category/" + cat.id) #{cat.categoryName}

    a(href="/admin/product/") Admin View
