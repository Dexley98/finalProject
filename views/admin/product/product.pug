doctype html
html
  head
    title Admin Product View
    link(rel="stylesheet", type="text/css", href="../../../css/layout.css")

  body
    h1 Product Detailed view
    ul
      li Product name: #{product.productName}
      li description: #{product.description}
      li Image:
        div
          img(src=product.image width='250' height='250')

      li Related Tags:
        ul
          each productTag in productTags
            each tag in tags
              if productTag.tagId == tag.id
                li #{tag.tagName}


    form(action="/admin/product/delete" method="POST")
      input(type="hidden" name="id" value=product.id)
      button(type="submit") Delete Product
    br

    a(href="/admin/product/edit/" + product.id) Edit Product
    br
    br
    a(href="/admin/product") back to list
