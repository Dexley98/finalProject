doctype html
html
  head
    title AFC EAST | Coaches
    link(rel="stylesheet", type="text/css", href="/css/layout.css")

  body

    h1
      a(href="/") AFC EAST
    button login
    button register
    br
    br
    a(href="/team") Teams
    a(href="/players") Players
    a(href="/coaches") Coaches
    br

    h2 Coaches

    each coach in coaches
      each team in teams
        h3 #{coach.coachName}
        p #{coach.bio}
        if team.id == coach.teamId
          p coached for:
            a(href="/team/" + team.id)  #{team.teamName}
        h4
          a(href="/coaches/" + coach.id) Profile
